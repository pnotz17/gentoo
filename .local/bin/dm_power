ðŸ”’Lock		slock
âš¡KillX	${Kill:-pkill -KILL -u $USER }
ðŸ”„RestartX	kill -HUP $(pidof -s dwm)
ðŸŒ’Hibernate	${Hib:-systemctl suspend}
