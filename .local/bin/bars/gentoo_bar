#!/bin/sh

function get_disk {
	disk1=$(df -Ph | grep "/dev/sdd" | awk {'print $5'})
	echo  "O: Ô∏è$disk1"
}

function get_uptime {
upt="$(uptime --pretty | sed -e 's/up //g' -e 's/ days/d/g' -e 's/ day/d/g' -e 's/ hours/h/g' -e 's/ hour/h/g' -e 's/ minutes/m/g' -e 's/, / /g')"
printf "%s $upt"
}

function get_mail {
	mail=`curl -su USER:PASSWD https://mail.google.com/mail/feed/atom || echo "<fullcount>unknown number of</fullcount>"`
	mail=`echo "$mail" | grep -oPm1 "(?<=<fullcount>)[^<]+" `
	echo  "M: $mail"
}

function get_cpuload {
	grep 'cpu ' /proc/stat |
	awk '{usage=($2+$4)*100/($2+$4+$5)}
		END {print "C: " int(usage) "%"}'
}

function get_ram {
	free |
	sed '2!d' |
	awk '{usage=$3*100/$2}
		END {print "R: " int(usage) "%"}'
}

function get_mem {
echo "M:$(df --output=pcent /dev/sdd1 | sed '2!d')"
}

function get_time {
	date +'%Y-%m-%d %R'
}

function get_audio {
	audio=$(
		amixer sget Master |
		sed '5!d;
		s_]..*__g;
		s_.*\[__'
	)
	muted=$(
		amixer sget Master |
		sed '5!d' |
		cut -f8 -d' '
	)

	if [ $muted = '[on]' ]; then
		echo "V: $audio"
	else
		echo "MMM $audio"
	fi
}

function get_net {

    if [ -d /sys/class/net/eth? ]; then
        if [ "$(cat /sys/class/net/eth?/carrier)" == "1" ]; then
            echo "LINK"
        fi
    fi
}

function get_up {
	T1=`cat /sys/class/net/eth0/statistics/tx_bytes`
	sleep 1
	T2=`cat /sys/class/net/eth0/statistics/tx_bytes`
	TBPS=`expr $T2 - $T1`
	TKBPS=`expr $TBPS / 1024`
	echo   "U: $TKBPS kb"
}

function get_down {
	R1=`cat /sys/class/net/eth0/statistics/rx_bytes`
	sleep 1
	R2=`cat /sys/class/net/eth0/statistics/rx_bytes`
	RBPS=`expr $R2 - $R1`
	RKBPS=`expr $RBPS / 1024`
	echo   "D: $RKBPS kb"
}

while true; do
	xsetroot -name "$(get_uptime) | $(get_mail) | $(get_cpuload) | $(get_ram) | $(get_up) | $(get_down) | $(get_audio) |"
	sleep 3
done
