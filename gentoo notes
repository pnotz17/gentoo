#Quick Install
mount /dev/sda1 /mnt/gentoo
cd /mnt/gentoo
wget
tar xpvf stage3-*.tar.xz --xattrs-include='*.*' --numeric-owner
mount --types proc /proc /mnt/gentoo/proc && mount --rbind /sys /mnt/gentoo/sys && mount --rbind /dev /mnt/gentoo/dev 
test -L /dev/shm && rm /dev/shm && mkdir /dev/shm &&  mount --types tmpfs --options nosuid,nodev,noexec shm /dev/shm 
cp /etc/resolv.conf /mnt/gentoo/etc
mkdir --parents /mnt/gentoo/etc/portage/repos.conf &&  cp /mnt/gentoo/usr/share/portage/config/repos.conf /mnt/gentoo/etc/portage/repos.conf/gentoo.conf
